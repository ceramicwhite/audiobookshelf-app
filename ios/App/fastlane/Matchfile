# Matchfile for code signing management

git_url(ENV["MATCH_GIT_URL"]) # URL to your certificates repository
storage_mode("git")
type("appstore") # The default type

app_identifier(["com.audiobookscasa.app"])
username(ENV["FASTLANE_USER"]) # Your Apple Developer Portal username

# For non-CI runs, we can be more interactive
readonly(true) # Only fetch certificates, don't create new ones in CI

# Optional: If you want to use a specific branch
# git_branch("certificates")

# Optional: If you're using a private repo with authentication
# git_basic_authorization(ENV["MATCH_GIT_BASIC_AUTHORIZATION"])

